{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "baseUrl": ".",
        "composite": true,
        "declaration": true,
        "esModuleInterop": true,
        // "types": [
        //     "jest"
        // ],
        "plugins": [
            {
                "name": "typescript-styled-plugin",
                "tags": [
                    "styled",
                    "css"
                ]
            }
        ],
        "paths": {
            "@src/*": [
                "./src/*"
            ],
            "@components/*": [
                "./src/components/*"
            ],
            "@assets/*": [
                "./src/assets/*"
            ]
        },
    },
    "include": [
        "../common-styles/src/emotion/emotion.d.ts",
        "src/**/*",
        "src/**/*.spec.js",
        "src/**/*.json",
        "@types/*",
        "utils/**/*",
        ".storybook/*",
        "jest.setup.ts"
    ]
}