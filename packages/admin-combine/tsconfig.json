{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "baseUrl": ".",
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "tags": [
          "styled",
          "css"
        ]
      }
    ],
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@types/*": [
        "./src/@types/*"
      ],
      // "@components/*": [
      //   "./src/components/*"
      // ],
      "@features/*": [
        "./src/features/*"
      ],
      "@pages/*": [
        "./src/pages/*"
      ],
      "@layout/*": [
        "./src/layout/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      // "@assets/*": [
      //   "./src/assets/*"
      // ]
    }
  },
  "include": [
    "../common-styles/src/emotion/emotion.d.ts",
    "src/**/*",
    "@types/*"
  ]
}